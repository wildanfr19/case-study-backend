PORT=3000
NODE_ENV=development

# --- MySQL Database ---
DB_HOST=localhost
DB_PORT=3306
DB_NAME=case_study_backend
DB_USER=root
DB_PASSWORD=your_password

# --- Uploads ---
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# --- OpenAI (leave blank to enable mock mode) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# --- AI Behavior Flags ---
# Force mock mode regardless of API key
AI_FORCE_MOCK=0
# If real call fails, fallback to mock partial evaluation
AI_FALLBACK_TO_MOCK=1
# If both CV & Project fail, synthesize a placeholder result
AI_AUTO_BOTH_FAIL_FALLBACK=1
# Retry attempts (1 = no retry, 2 = one retry, etc.)
AI_RETRY_ATTEMPTS=2
AI_RETRY_BASE_DELAY_MS=1200
# Enable verbose logging of AI pipeline
DEBUG_AI=0

# --- Truncation (optional) ---
AI_CV_MAX_CHARS=20000
AI_PROJECT_MAX_CHARS=22000
